@{
    Layout = null;
    var newsbyid = (List<Model.EntityFramework.BAIDANG>)ViewBag._k_news;

}


@section pagetitle{
    @foreach (var item in newsbyid)
    {
        <title>@item.TenBaiDang</title>
    }
}


