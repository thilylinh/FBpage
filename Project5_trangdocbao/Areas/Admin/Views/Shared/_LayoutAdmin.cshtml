    <script type="text/javascript" async>
        $(document).ready(function () {
            $('#btn_avt_post').click(function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (urlimage) {
                    $('#txt_avt_post').val(urlimage);

                    $('#image-preview__image').attr("src", urlimage);
                };
                finder.popup();
            });

            
            var ckeditor = CKEDITOR.replace('txtnoidung', {
                customConfig: '/Assets/Admin/ckeditor/config.js',
            });;
            //CKEDITOR.disableAutoInline = false;
            //CKEDITOR.inline('txtnoidung');

            var ckeditor1 = CKEDITOR.replace('tieuDe', {
                customConfig: '/Assets/Admin/ckeditor/config.js',
            });
            ckeditor1.config.height = '3em';

            var ckeditor2 = CKEDITOR.replace('phuDe', {
                customConfig: '/Assets/Admin/ckeditor/config.js',
            });
            ckeditor2.config.height = '3em';

        });
    </script>
