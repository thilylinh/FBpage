@model PagedList.IPagedList<Model.EntityFramework.CHUYENMUC>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý chuyên mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    QUẢN LÝ CHUYÊN MỤC
}


<div class="=row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DANH SÁCH CHUYÊN MỤC
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Chức năng</th>
                                <th>Mã chuyên mục</th>
                                <th>Mã chuyên mục cha</th>
                                <th>Tên chuyên mục</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.IDCM">
                                    <td>
                                        <button class="btn btn-info"><a href="/Admin/CateManager/UpdateType/@item.IDCM">Sửa</a></button>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.IDCM }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc chắn muốn xóa bản ghi?",
                                       OnComplete = "$('#row_" + @item.IDCM + "').fadeOut(300)",
                                       HttpMethod = "Delete"

                                   }, new { @class = "btn btn-danger" })
                                    </td>
                                    <td>@item.IDCM</td>
                                    <td>@item.IDCMCha</td>
                                    <td>@item.TenCM</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
