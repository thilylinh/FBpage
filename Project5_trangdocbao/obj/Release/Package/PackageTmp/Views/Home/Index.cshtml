@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";

    var lastestnews25 = (List<Model.EntityFramework.BAIDANG>)ViewBag._K_LastestNews25;

    var lastestnews1 = (List<Model.EntityFramework.BAIDANG>)ViewBag._KLastestNews;

    var listdoisong = (List<Model.EntityFramework.BAIDANG>)ViewBag.doisong;
    var listgiaitri = (List<Model.EntityFramework.BAIDANG>)ViewBag.giaitri;
    var listthethao = (List<Model.EntityFramework.BAIDANG>)ViewBag.thethao;
    //Bài xem nhiều
    var postrelative = (List<Model.EntityFramework.BAIDANG>)ViewBag._k_relative;
}

@section pagetitle{
    <title>SCIENCE MYSTERY</title>
}
<!-- slick slider css file -->
<link href="/Assets/Client/css/slick.css" rel="stylesheet">

<div class="content_top">
    <div class="row top5news">

        <!-- BÀI ĐĂNG MỚI NHẤT_TOP1 -->
        <div class="col-lg-6 col-md-6 col-sm6 newsstop1">
            <div class="latest_slider">
                <!-- Set up your HTML -->
                <div class="slick_slider">
                    <div class="single_iteam">
                        @foreach (var item123 in lastestnews1)
                        {
                            <a class="slider_tittle" title="@item123.TenBaiDang" href="/Doc-bao/@item123.UrlRequire-@item123.IDBaiDang" target="_blank">
                                <img class="img_top1_home" src="@item123.AnhDaiDien" alt="img">
                                <h4>
                                    @item123.TenBaiDang
                                </h4>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div> <!-- End content top latest slider -->
        <!-- BÀI ĐĂNG MỚI NHẤT_TOP từ 2 đến 4 -->
        <div class="col-lg-6 col-md-6 col-sm6 newsstop1">
            <div class="content_top_right">
                <ul class="featured_nav wow fadeInDown">

                    @foreach (var item in lastestnews25)
                    {
                        <li>
                            <a href="/Doc-bao/@item.UrlRequire-@item.IDBaiDang" title="@item.TenBaiDang" target="_blank">
                                <img class="img_topn_home" src="@item.AnhDaiDien" alt="@item.TenBaiDang">
                                <div class="title_caption">
                                    @item.TieuDe
                                </div>
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>
<div class="content_bottom">
    <div class="col-lg-8 col-md-8">
        <!-- start content bottom left -->
        <div class="content_bottom_left">
            <!--____________________________________________________ Đời sống -->
            <div class="single_category wow fadeInDown">
                <h2>
                    <a class="title_text" href="#">Science Mystery</a>
                </h2>

                @foreach (var item in listdoisong)
                {
                    <div class="business_category_left wow fadeInDown animated">
                        <ul class="fashion_catgnav">
                            <li>
                                <div class="catgimg2_container">
                                    <a href="/doc-bao/@item.UrlRequire-@item.IDBaiDang"><img alt="img" src="@item.AnhDaiDien"></a>
                                </div>
                                <h2 class="catg_titile"><a href="/doc-bao/@item.UrlRequire-@item.IDBaiDang">  @item.TenBaiDang</a></h2>
                            </li>
                        </ul>
                    </div>
                }
            </div>
            <!--____________________________________________________ Nghiên cứu khoa học -->
            <div class="single_category wow fadeInDown">
                <h2>
                    <a class="title_text" href="#">Love Animals</a>
                </h2>

                @foreach (var item in listgiaitri)
                {
                    <div class="business_category_left wow fadeInDown animated">
                        <ul class="fashion_catgnav">
                            <li>
                                <div class="catgimg2_container">
                                    <a href="/doc-bao/@item.UrlRequire-@item.IDBaiDang"><img alt="img" src="@item.AnhDaiDien"></a>
                                </div>
                                <h2 class="catg_titile"><a href="/Doc-bao/@item.UrlRequire-@item.IDBaiDang">  @item.TenBaiDang</a></h2>
                            </li>
                        </ul>
                    </div>
                }
            </div>

            <!--____________________________________________________ Tin tức -->
            <div class="single_category wow fadeInDown">
                <h2>
                    <a class="title_text" href="#">The discovery of universe</a>
                </h2>

                @foreach (var item in listthethao)
                {
                    <div class="business_category_left wow fadeInDown animated">
                        <ul class="fashion_catgnav">
                            <li>
                                <div class="catgimg2_container">
                                    <a href="/Doc-bao/@item.UrlRequire-@item.IDBaiDang"><img alt="img" src="@item.AnhDaiDien"></a>
                                </div>
                                <h2 class="catg_titile"><a href="/doc-bao/@item.UrlRequire-@item.IDBaiDang">  @item.TenBaiDang</a></h2>
                            </li>
                        </ul>
                    </div>
                }
            </div>
            <!-- End business category -->
        </div><!--End content_bottom_left-->
    </div>
    <!-- start content bottom right -->
    <div class="col-lg-4 col-md-4">
        <div class="content_bottom_right">
            <!-- start single bottom rightbar -->
            <div class="single_bottom_rightbar">
                <h2>MOST VIEWED POSTS</h2>
                <ul class="small_catg popular_catg wow fadeInDown animated" style="visibility: visible; animation-name: fadeInDown;">
                    @foreach (var item in postrelative)
                    {
                        <li>
                            <div class="media wow fadeInDown animated" style="visibility: visible; animation-name: fadeInDown;">
                                <div class="img_post_right">
                                    <a href="/doc-bao/@item.UrlRequire-@item.IDBaiDang" class="media-left">
                                        <img alt="img" src="@item.AnhDaiDien">
                                    </a>
                                </div>
                                <div class="media-body">
                                    <h4 class="media-heading"><a href="/doc-bao/@item.UrlRequire-@item.IDBaiDang"> @item.TenBaiDang</a></h4>
                                    <p> @item.TieuDe</p>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- start content bottom right -->
</div>

@* script *@
<!-- For content animatin  -->
<script src="/Assets/Client/js/wow.min.js" async></script>
<!-- slick slider js file -->
<script src="/Assets/Client/js/slick.min.js" async></script>

<!-- custom js file include -->
<script src="/Assets/Client/js/custom.js"></script>