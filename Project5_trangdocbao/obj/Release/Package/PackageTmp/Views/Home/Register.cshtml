@{
    Layout = null;
}
@model Model.EntityFramework.TAIKHOAN

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <script src="/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="/Assets/Admin/js/JQueryV1.9.1.js"></script>
    <link href="/Assets/Admin/Admin.css" rel="stylesheet" />

    <!-- Bootstrap Core CSS -->
    <link href="/Assets/Admin/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="/Assets/Admin/bower_components/metisMenu/dist/metisMenu.min.css" rel="stylesheet">

    <script src="/Assets/Admin/plugins/ckfinder/ckfinder.js"></script>

    <!-- Custom CSS -->
    <link href="/Assets/Admin/dist/css/sb-admin-2.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/Assets/Admin/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">


    <style>
        .form-group {clear: both;
        }
    </style>
</head>
<body>




    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    ĐĂNG KÍ LÀM THÀNH VIÊN
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-lg-12">
                            <form action="@Url.Action("Register","Home")" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <fieldset>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TenTaiKhoan, htmlAttributes: new { @class = "control-laber col-md-2" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.TenTaiKhoan, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-laber col-md-2" })
                                        <div class="col-md-8">
                                            @Html.PasswordFor(model => model.MatKhau, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MatKhau)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "control-laber col-md-2" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.HoTen, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.HoTen)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-laber col-md-2" })
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.NgaySinh, new { @type = "Date", @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.NgaySinh)
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.GioiTinh, htmlAttributes: new { @class = "control-laber col-md-2" })
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.GioiTinh, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.GioiTinh)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-laber col-md-2" })

                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-laber col-md-2" })

                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.DiaChi, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DiaChi)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SDT, htmlAttributes: new { @class = "control-laber col-md-2" })

                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.SDT, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SDT)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.AnhDaiDien, htmlAttributes: new { @class = "control-laber col-md-2" })

                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.AnhDaiDien, new { @readonly = "readonly", @class = "form-control123", htmlAttributes = new { @class = "form-control", @readonly = "readonly" }, id = "txt_avt_post" })
                                            <a id="btn_avt_post" href="#"> Chọn ảnh</a>
                                            @Html.ValidationMessageFor(model => model.AnhDaiDien)
                                        </div>
                                    </div>
                                    <div class="form-group" style=" clear: both; text-align: center">
                                        <input type="submit" class="btn btn-default" value="Create" />
                                    </div>
                                </fieldset>
                            </form>
                           

                            <div>
                                @Html.ActionLink("Back to List", "Index")
                            </div>

                            @*@section Scripts {
                                    @Scripts.Render("~/bundles/jqueryval")
                                }*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/Assets/Admin/bower_components/jquery/dist/jquery.min.js"></script>

    <script src="/Assets/Admin/js/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/Assets/Admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="/Assets/Admin/bower_components/metisMenu/dist/metisMenu.min.js"></script>

    <script src="/Assets/Admin/plugins/ckfinder/ckfinder.js"></script>
    <script src="/Assets/Admin/plugins/ckeditor/ckeditor.js"></script>


    <!-- Custom Theme JavaScript -->
    <script src="/Assets/Admin/dist/js/sb-admin-2.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#btn_avt_post').click(function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (urlimage) {
                    $('#txt_avt_post').val(urlimage);
                };
                finder.popup();
            });
            var ckeditor = CKEDITOR.replace('txtnoidung', {
                customConfig: '/Assets/Admin/plugins/ckeditor/config.js',
            });
        });

    </script>


</body>
</html>
