@model PagedList.IPagedList<Model.EntityFramework.BAIDANG>
@using PagedList.Mvc;


@{
    ViewBag.Title = "MyPost";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_User.cshtml";
}

@section stylesheet{
   <script>
       function xoachucnang()
       {
           var tt=$('.tb_tenbanghi').Child('.tb_trangthai').val();
           if (tt=="ĐÃ DUYỆT")
           {
               $(this).remove('a.clink_llll');
           }
       }
    </script>
    }




<div class="=row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    BÀI ĐĂNG CỦA TÔI
                </h4>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                @using (Html.BeginForm("MyPost", "UserPostManager", FormMethod.Get))
                {
                    <div class="row" style="padding-bottom: 10px!important">
                        <div class="col-lg-8">
                            <div class="input-group margin">
                                <input type="text" class="form-control" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập tên tài khoản, họ tên để tìm kiếm...">
                                <span class="input-group-btn">
                                    <button class="btn btn-info btn-flat" type="submit">Tìm</button>
                                </span>
                            </div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Chức năng</th>
                                <th>Tên bài đăng</th>
                                <th>Ảnh đại diện</th>
                                <th>Ngày đăng</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.IDBaiDang" class="tb_tenbanghi">
                                    <td>
                                        <a href="/Admin/UserPostManager/UpdatePost/@item.IDBaiDang" class="clink_llll" title="Sửa bài đăng này">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.IDBaiDang }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có chắc chắn muốn xóa bản ghi?",
                                       OnComplete = "$('#row_" + @item.IDBaiDang + "').fadeOut(300)",
                                       HttpMethod = "Delete"
                                   }, new { @class = "clink_rrrr", @title = "Xóa bài đăng này", area = "Admin" })
                                    </td>
                                    <td>
                                        <a href="/Admin/PostManager/Preview/@item.UrlRequire-@item.IDBaiDang">
                                            @item.TenBaiDang
                                        </a>
                                    </td>
                                    <td>
                                        <img src="@item.AnhDaiDien" class="img__lpost" alt=" alternate text" />
                                    </td>
                                    <td>@Convert.ToDateTime(@item.NgayDang).ToShortDateString()</td>
                                    <td class="tb_trangthai"> @item.TrangThaiBaiDang.ToUpper()</td>
                                </tr>
                            }
                        </tbody>
                    </table>


                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.searchstring }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
