@model Model.EntityFramework.THELOAI

@{
    ViewBag.Title = "AddType";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    THÊM THỂ LOẠI
}

<style>
    .form-group {
        margin-bottom: 10px !important;
        clear: both;
        min-height: 35px;
        position: relative;
        padding-bottom: 5px !important;
    }

    .form-control123 {
        display: block;
        width: 60%;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 1.42857143;
        color: #555;
        background-color: #fff;
        background-image: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
        -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
        -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        float: left;
        margin-right: 10px;
    }

    .form-group1122 {
        clear: both;
        padding-top: 10px;
        text-align: center;
    }

    #cke_txtnoidung {
        margin-bottom: 10px;
    }

    .image-preview {
        width: 300px;
        min-height: 100px;
        border: 1px solid #dddddd;
        margin-top: 15px;
    }

    .image-preview__image {
        display: none;
        width: 100%;
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-field row">
            <div class="form-group">
                <label>Tên thể loại</label>
                <br />
                @Html.TextBoxFor(model => model.TenTheLoai, new { @class = "form-control123", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai)
            </div>
            <div class="form-group">
                <label>Tên Url</label>

                <br />
                @Html.TextBoxFor(model => model.UrlRequire, new { @class = "form-control123", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UrlRequire)
            </div>

            <div class="form-group">
                <label>Domain</label>

                <br />
                @Html.TextBoxFor(model => model.Domain, new { @class = "form-control123", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Domain)
            </div>
        </div>
        @*<div>
            @Html.TextBoxFor(model => model.UrlRequire, new { @class = "form-control123", htmlAttributes = new { @class = "form-control" } })
        </div>*@
    </fieldset>
    <br />
    <div class="row">
        <div class="col-1">
            <input class="btn btn-success" type="submit" value="Tạo" />
        </div>
        
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>

