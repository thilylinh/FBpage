    ViewBag.Title = "UpdateType";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@section header{
    CẬP NHẬT THỂ LOẠI
}


@using (Html.BeginForm("UpdateType", "TypeManager", FormMethod.Post))
{
