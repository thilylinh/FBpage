@model Model.EntityFramework.TAIKHOAN


@{
    ViewBag.Title = "Thêm tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

@section header{
    CẬP NHẬT NGƯỜI DÙNG
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Cập nhật thông tin người dùng
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        @using (Html.BeginForm("UpdateAccount", "AccountManager", FormMethod.Post))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" });

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <fieldset>



                                <div class="editor-label">
                                    @Html.HiddenFor(model => model.IDTaiKhoan)
                                </div>


                                <div class="editor-field">
                                    @Html.HiddenFor(model => model.IDTaiKhoan, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.TenTaiKhoan)
                                </div>





                                <div class="editor-label">
                                    @Html.LabelFor(model => model.TenTaiKhoan)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.TenTaiKhoan, new { @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.TenTaiKhoan)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.HoTen)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.HoTen)
                                    @Html.ValidationMessageFor(model => model.HoTen)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.NgaySinh)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.NgaySinh, new { @type = "Date" })
                                    @Html.ValidationMessageFor(model => model.NgaySinh)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.GioiTinh)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.GioiTinh)
                                    @Html.ValidationMessageFor(model => model.GioiTinh)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Email)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.Email, new { @type = "Mail" })
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.DiaChi)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.DiaChi)
                                    @Html.ValidationMessageFor(model => model.DiaChi)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.SDT)
                                </div>
                                <div class="editor-field">
                                    @Html.EditorFor(model => model.SDT)
                                    @Html.ValidationMessageFor(model => model.SDT)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.AnhDaiDien)
                                </div>
                                <div class="editor-field">

                                    <img src="@ViewBag.AnhDaiDien " alt=" ảnh đại diện" />
                                    @Html.TextBoxFor(model => model.AnhDaiDien, new { @type = "file" })
                                    @Html.ValidationMessageFor(model => model.AnhDaiDien)
                                </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.TrangThaiNguoiDung)
                                </div>
                                <div class="editor-field">
                                    @Html.TextBoxFor(model => model.TrangThaiNguoiDung)
                                    @Html.ValidationMessageFor(model => model.TrangThaiNguoiDung)
                                </div>

                                <p>
                                    <input type="submit" value="Update Account" />
                                </p>
                            </fieldset>
                        }

                        <div>
                            @Html.ActionLink("Trở lại", "Index")
                        </div>

                        @*@section Scripts {
                                @Scripts.Render("~/bundles/jqueryval")
                            }*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
